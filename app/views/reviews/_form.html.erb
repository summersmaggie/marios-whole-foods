<div class="container">
  <%= render "layouts/errors", :object => @review %>

  <%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :content_body %>
  <%= f.text_field :content_body %>
  <%= f.label :rating, "Rating 1-5 (1 being the worst, 5 being the best)" %>
  <%= f.text_field :rating %>
  <%= f.submit  %>
  <% end %>
</div>
